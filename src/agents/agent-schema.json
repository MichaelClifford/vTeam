{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/your-org/rfe-refiner/schemas/agent.schema.json",
  "title": "RFE Agent Configuration",
  "description": "Configuration schema for RFE refiner AI agents",
  "type": "object",
  "required": [
    "name",
    "persona",
    "role",
    "expertise",
    "systemMessage",
    "dataSources",
    "analysisPrompt",
    "sampleKnowledge"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable display name for the agent",
      "examples": ["Product Manager", "UX Designer", "Backend Engineer"]
    },
    "persona": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "description": "Unique identifier for the agent persona (UPPERCASE_WITH_UNDERSCORES)",
      "examples": ["PM", "UXD", "BACKEND_ENG", "FRONTEND_ENG"]
    },
    "role": {
      "type": "string",
      "description": "Brief description of the agent's role",
      "examples": [
        "Product Management",
        "User Experience Design",
        "Backend Development"
      ]
    },
    "isRootAgent": {
      "type": "boolean",
      "default": false,
      "description": "Whether this agent serves as the primary coordinating agent"
    },
    "expertise": {
      "type": "array",
      "description": "List of expertise areas for this agent",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "examples": [
        ["requirements-analysis", "stakeholder-management"],
        ["user-interface", "usability", "accessibility"],
        ["system-architecture", "api-design", "scalability"]
      ]
    },
    "systemMessage": {
      "type": "string",
      "description": "System prompt that defines the agent's personality and focus areas",
      "minLength": 50
    },
    "dataSources": {
      "type": "array",
      "description": "List of data sources for RAG knowledge base - supports local directories, Git repos, and websites",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Local directory name",
            "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
          },
          {
            "type": "object",
            "description": "Advanced data source configuration",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Unique name for this data source"
              },
              "type": {
                "type": "string",
                "enum": ["directory", "github", "web", "confluence", "notion"],
                "description": "Type of data source"
              },
              "source": {
                "type": "string",
                "description": "Source URL or path"
              },
              "options": {
                "type": "object",
                "description": "Additional options for the data source",
                "properties": {
                  "branch": { "type": "string" },
                  "path": { "type": "string" },
                  "recursive": { "type": "boolean", "default": true },
                  "fileTypes": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "chunkingStrategy": {
                    "type": "string",
                    "enum": ["sentence", "semantic", "token", "paragraph"],
                    "default": "semantic"
                  }
                }
              }
            }
          }
        ]
      },
      "minItems": 1,
      "examples": [
        ["product-requirements", "business-analysis"],
        [
          {
            "name": "react-docs",
            "type": "github",
            "source": "facebook/react",
            "options": { "path": "docs/", "chunkingStrategy": "semantic" }
          }
        ]
      ]
    },
    "analysisPrompt": {
      "type": "object",
      "description": "Template configuration for RFE analysis",
      "required": ["template", "templateVars"],
      "properties": {
        "template": {
          "type": "string",
          "description": "Analysis prompt template with placeholder variables",
          "minLength": 100
        },
        "templateVars": {
          "type": "array",
          "description": "List of template variable names used in the prompt",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "minItems": 1,
          "examples": [["rfe_description", "context"]]
        }
      },
      "additionalProperties": false
    },
    "tools": {
      "type": "array",
      "description": "Tool configurations for the agent (future use)",
      "items": {
        "type": "object"
      },
      "default": []
    },
    "sampleKnowledge": {
      "type": "string",
      "description": "Sample knowledge base content in Markdown format",
      "minLength": 100
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "name": "Product Manager",
      "persona": "PM",
      "role": "Product Management",
      "isRootAgent": true,
      "expertise": [
        "requirements-analysis",
        "stakeholder-management",
        "prioritization"
      ],
      "systemMessage": "You are a Senior Product Manager...",
      "dataSources": ["product-requirements", "business-analysis"],
      "analysisPrompt": {
        "template": "As a Product Manager, analyze this RFE...",
        "templateVars": ["rfe_description", "context"]
      },
      "tools": [],
      "sampleKnowledge": "# Product Management Best Practices..."
    }
  ]
}
