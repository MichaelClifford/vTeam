# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, ollama
EMBEDDING_PROVIDER=openai  # Options: openai, huggingface, ollama

# OpenAI API Configuration (when using openai provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE="https://api.openai.com/v1/"

# Anthropic API Configuration (when using anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (when using ollama provider)
OLLAMA_BASE_URL=http://localhost:11434

# Optional: GitHub token for accessing repositories for RAG data
GITHUB_TOKEN=your_github_token_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Custom model configurations
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-3-small

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Optional: RAG Configuration
RAG_TOP_K=10
MAX_CONTEXT_LENGTH=8000

# Optional: Agent Configuration
ENABLE_ALL_AGENTS=true
MAX_SYNTHESIS_ITERATIONS=3
